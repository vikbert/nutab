{
  "name": "NuTab",
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval'",
  "permissions": ["tts", "bookmarks", "storage"],
  "options_page": "options.html",
  "background": {
    "persistent": false,
    "scripts": ["background.bundle.js"]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon-34.png"
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "icons": {
    "128": "icon-34.png"
  },
  "web_accessible_resources": ["icon-34.png"]
}
